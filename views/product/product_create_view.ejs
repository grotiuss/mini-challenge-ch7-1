<%- include('../partials/header') %>
</head>

<%- include('../partials/navbar') %>

<h3 class="text-center mt-4">Create Product</h3>

<div class="row justify-content-center mt-5">
    <div class="col-md-8">
        <form action="/product/create" method="post">
            <div class="mb-3">
                <label for="productName" class="form-label">Product Name</label>
                <input type="text" class="form-control" name="productName" id="productName" placeholder="Product Name" required>
            </div>
            <div class="mb-3">
                <label for="price" class="form-label">Price ($)</label>
                <input type="number" class="form-control" name="price" id="price" placeholder="0.00" required>
            </div>
            <div class="mb-3">
                <label for="category" class="form-label">Category</label>
                <select class="form-select" name="category" id="category" aria-label="Default select example" required>
                    <option value="" selected>-- Select category --</option>
                    <% content.productCategory.forEach( category => { %>
                        <option value="<%= category.id %>"><%= category.name %></option>
                    <% }) %>
                </select>
            </div>
            <div class="mb-3">
                <label for="stock" class="form-label">Initial Stock</label>
                <input type="number" class="form-control" name="stock" id="stock" min="1" placeholder="0" required>
            </div>
            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea class="form-control" name="description" id="description" rows="3"></textarea>
            </div>
            <div class="mb-3 text-end">
                <input type="submit" value="Submit">
            </div>
        </form>
    </div>
</div>

<%- include('../partials/footer') %>