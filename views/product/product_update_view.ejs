<%- include('../partials/header') %>
</head>

<%- include('../partials/navbar') %>

<h3 class="text-center mt-4">Update Product</h3>

<div class="row justify-content-center mt-5">
    <div class="col-md-8">
        <form action="/product/update/<%= content.detail.id %>" method="post">
            <div class="mb-3">
                <label for="productName" class="form-label">Product Name</label>
                <input type="text" class="form-control" name="productName" id="productName" placeholder="Product Name" value="<%= content.detail.title %>" required>
            </div>
            <div class="mb-3">
                <label for="price" class="form-label">Price ($)</label>
                <input type="number" class="form-control" name="price" id="price" placeholder="0.00" value="<%= content.detail.price %>" required>
            </div>
            <div class="mb-3">
                <label for="category" class="form-label">Category</label>
                <select class="form-select" name="category" id="category" aria-label="Default select example" required>
                    <option value="">-- Select category --</option>
                    <% content.productCategory.forEach( category => { %>
                        <% if (category.id == content.detail.category_id) { %>
                            <option value="<%= category.id %>" selected><%= category.name %></option>
                        <% } else { %>
                            <option value="<%= category.id %>"><%= category.name %></option>
                        <% } %>
                    <% }) %>
                </select>
            </div>
            <div class="mb-3">
                <label for="stock" class="form-label">Stock</label>
                <input type="number" class="form-control" name="stock" id="stock" min="1" placeholder="0" value="<%= content.detail.stock %>" required>
            </div>
            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea class="form-control" name="description" id="description" rows="3"><%= content.detail.description %></textarea>
            </div>
            <div class="mb-3 text-end">
                <input type="submit" value="Submit">
            </div>
        </form>
    </div>
</div>

<%- include('../partials/footer') %>